{
  "manifest_version": 2,
  "name": "BootstrapLoader API",
  "description": "Extension containing an experimental API that allows to register a legacy bootstrap.js.",
  "version": "1",
  "applications": {
    "gecko": {
      "id": "BootstrapLoader@example.thunderbird.net"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "experiment_apis": {
    "BootstrapLoader": {
      "schema": "api/BootstrapLoader/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "BootstrapLoader"
          ]
        ],
        "script": "api/BootstrapLoader/implementation.js"
      }
    }
  }
}
